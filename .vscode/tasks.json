{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-api",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "src/TextParsingApi/TextParsingApi.csproj"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-api",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "src/TextParsingApi/TextParsingApi.csproj"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "test-api",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "test",
        "src/TextParsingApi/"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "install-ui",
      "type": "shell",
      "command": "npm",
      "args": [
        "install"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/text-parsing-ui"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "run-ui",
      "type": "shell",
      "command": "npm",
      "args": [
        "start"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/text-parsing-ui"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true
    },
    {
      "label": "test-ui",
      "type": "shell",
      "command": "npm",
      "args": [
        "test",
        "--",
        "--watchAll=false"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/text-parsing-ui"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "build-all",
      "dependsOrder": "sequence",
      "dependsOn": [
        "build-api",
        "install-ui"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "run-all",
      "dependsOrder": "parallel",
      "dependsOn": [
        "run-api",
        "run-ui"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}